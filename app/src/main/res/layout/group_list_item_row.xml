<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_list_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96B2BF"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_groupName"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView_removeGroup"
        android:layout_width="51dp"
        android:layout_height="68dp"
        android:layout_alignTop="@+id/textView_groupName"
        android:layout_marginStart="89dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView_groupName"
        app:srcCompat="@drawable/delete" />

    <TextView
        android:id="@+id/textView_groupDescription"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView_groupName"
        android:layout_alignStart="@+id/textView_groupName"
        android:layout_alignEnd="@+id/textView_groupName"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-31dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView_lock"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/textView_groupName"
        android:layout_alignEnd="@+id/imageView_removeGroup"
        android:layout_alignBottom="@+id/textView_groupDescription"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/textView_groupName"
        app:srcCompat="@drawable/lock" />


</RelativeLayout>