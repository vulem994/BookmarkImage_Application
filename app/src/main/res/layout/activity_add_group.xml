<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroup">

    <EditText
        android:id="@+id/addGroup_repeatPassword"
        android:layout_width="283dp"
        android:layout_height="54dp"
        android:height="50dp"
        android:ems="10"
        android:hint="* * * *"
        android:inputType="numberPassword"
        android:textAlignment="center"
        app:layout_columnWeight="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/addGroup_password" />

    <EditText
        android:id="@+id/addGroup_password"
        android:layout_width="283dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:height="50dp"
        android:ems="10"
        android:hint="* * * *"
        android:inputType="numberPassword"
        android:textAlignment="center"
        app:layout_columnWeight="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:height="50dp"
        android:fontFamily="sans-serif"
        android:fontFeatureSettings="@string/bottom_sheet_behavior"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="PIN:"
        android:textAlignment="textStart"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_columnWeight="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:height="50dp"
        android:fontFamily="sans-serif"
        android:fontFeatureSettings="@string/bottom_sheet_behavior"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="Private group:"
        android:textAlignment="textStart"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_columnWeight="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addGroup_description"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/addGroup_description"
        android:layout_width="411dp"
        android:layout_height="156dp"
        android:height="50dp"
        android:ems="10"
        android:hint="Group description"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_columnWeight="50"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/addGroup_title"
        android:layout_width="413dp"
        android:layout_height="62dp"
        android:height="50dp"
        android:ems="10"
        android:hint="Group title"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_columnWeight="50"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="408dp"
        android:layout_height="62dp"
        android:height="50dp"
        android:fontFamily="sans-serif"
        android:fontFeatureSettings="@string/bottom_sheet_behavior"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="Description:"
        android:textAlignment="textStart"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_columnWeight="50"
        app:layout_constraintTop_toBottomOf="@+id/addGroup_title"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="410dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:height="50dp"
        android:fontFamily="sans-serif"
        android:fontFeatureSettings="@string/bottom_sheet_behavior"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="Title:"
        android:textAlignment="textStart"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_columnWeight="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/addGroup_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addGroup_repeatPassword"
        app:layout_constraintVertical_bias="0.762" />

    <CheckBox
        android:id="@+id/addGroup_checkBox_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:flow_verticalAlign="center"
        app:flow_horizontalAlign="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>