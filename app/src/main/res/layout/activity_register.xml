<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Full name:"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/reg_textBox_fullName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:ems="10"
                android:hint="Name Surename"
                android:inputType="text"
                android:textAlignment="center"
                app:layout_columnWeight="50" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Date of birth"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />


            <EditText
                android:id="@+id/reg_textBox_dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:ems="10"
                android:hint="01/01/1900"
                android:textAlignment="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Gender:"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />

            <RadioGroup
                android:id="@+id/reg_radioButtonGroup_gender"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <RadioButton
                    android:id="@+id/reg_radioButton_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/reg_radioButton_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="E-mail:"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/reg_textBox_email"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:ems="10"
                android:hint="example@mail.com"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                app:layout_columnWeight="50" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Username: "
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/reg_textBox_username"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:ems="10"
                android:hint="Example"
                android:inputType="text"
                android:textAlignment="center"
                app:layout_columnWeight="50" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:fontFamily="sans-serif"
                android:fontFeatureSettings="@string/bottom_sheet_behavior"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Password:"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="20sp"
                app:layout_columnWeight="50"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/reg_passwordBox_password"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                app:layout_columnWeight="50" />

            <EditText
                android:id="@+id/reg_passwordBox_repeatPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:height="50dp"
                android:ems="10"
                android:hint="Repeat password"
                android:inputType="textPassword"
                android:textAlignment="center"
                app:layout_columnWeight="50" />

            <Button
                android:id="@+id/reg_button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:onClick="ButtonRegister_Click"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>